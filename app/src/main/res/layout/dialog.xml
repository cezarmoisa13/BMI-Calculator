<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue"
    >

    <!-- personalize you text,font,textcolor etc. -->
    <TextView
        android:id="@+id/textmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Contact us through:"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="#004D65"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Email -->
    <TextView
        android:id="@+id/emailButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="5dp"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="Email"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/light_blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textmain" />

    <!-- Youtube -->
    <TextView
        android:id="@+id/ytbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="Youtube"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/light_blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailButton" />

    <!-- Instagram -->
    <TextView
        android:id="@+id/instabutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="Instagram"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/light_blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ytbutton" />

    <!-- Facebook -->
    <TextView
        android:id="@+id/fbbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="Facebook"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/light_blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instabutton" />

    <TextView
        android:id="@+id/cancelbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="125dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:gravity="center"
        android:text="Cancel"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fbbutton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_margin="15dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>